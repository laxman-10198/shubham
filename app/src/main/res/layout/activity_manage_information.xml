<?xml version="1.0" encoding="utf-8"?>

<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ManageInformationActivity">

    <include
    android:id="@+id/manageInfoHeader"
    layout="@layout/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/con_main"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/manageInfoHeader"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/contactHeader"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtWebsiteLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/website_logo"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="@dimen/_20sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/file1"
                    android:text="@string/choose_file"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:background="@drawable/choose_file_bg"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="abc.png"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@+id/file1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/messageText"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/website"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtWebsiteLogo" />

                <EditText
                    android:id="@+id/etWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="@string/enter_website_link"
                    app:layout_constraintTop_toBottomOf="@id/txtWebsite"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:padding="@dimen/_7sdp"
                    android:background="@color/light_grey"/>

                <TextView
                    android:id="@+id/txtDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details"
                    app:layout_constraintTop_toBottomOf="@id/etWebsite"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/etDetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    app:layout_constraintTop_toBottomOf="@id/txtDetails"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:gravity="start"
                    android:hint="@string/enter_details"
                    android:singleLine="false"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:padding="@dimen/_7sdp"
                    android:background="@color/light_grey"/>


                <TextView
                    android:id="@+id/txtOpening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opening_time"
                    app:layout_constraintTop_toBottomOf="@id/etDetails"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/etOpening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtOpening"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:singleLine="true"
                    android:hint="@string/enter_opening_time"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:padding="@dimen/_7sdp"
                    android:background="@color/light_grey"/>

                <TextView
                    android:id="@+id/txtClosing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/closing_time"
                    app:layout_constraintTop_toBottomOf="@id/etOpening"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/etClosing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtClosing"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:singleLine="true"
                    android:hint="@string/enter_closing_time"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:padding="@dimen/_7sdp"
                    android:background="@color/light_grey"/>

                <TextView
                    android:id="@+id/txtAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/averages_charges"
                    app:layout_constraintTop_toBottomOf="@id/etClosing"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/etAverageCharges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtAverage"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:hint="@string/enter_average_charges"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:padding="@dimen/_7sdp"
                    android:background="@color/light_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_banner"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/etAverageCharges"                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="@dimen/_20sdp"/>
                <TextView
                    android:id="@+id/file2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintTop_toBottomOf="@id/etAverageCharges"
                    android:text="@string/choose_file"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:background="@drawable/choose_file_bg"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/second_banner"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/file2"                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="@dimen/_20sdp"/>
                <TextView
                    android:id="@+id/file3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintTop_toBottomOf="@id/file2"
                    android:text="@string/choose_file"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:background="@drawable/choose_file_bg"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/banner_third"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/file3"                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="@dimen/_20sdp"/>
                <TextView
                    android:id="@+id/file4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintTop_toBottomOf="@id/file3"
                    android:text="@string/choose_file"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:background="@drawable/choose_file_bg"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>
                <Button
                    android:id="@+id/btnsubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/file4"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/green_button"
                    android:text="@string/submit"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/poppins_medium"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_17ssp"
                    android:textColor="@color/black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>