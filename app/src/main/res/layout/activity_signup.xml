<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SignupActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_175sdp"
            android:paddingBottom="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/c1"
            android:background="#EFF7FE">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/logo"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/_50sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/logo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_148sdp"
            android:background="@drawable/rectanglebg"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/txt2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_77sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt2"
                app:layout_constraintLeft_toRightOf="@+id/txt3"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt"/>
            <EditText
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_first_name"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_13ssp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/firstname"/>
            <EditText
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_last_name"
                android:layout_marginRight="@dimen/_20sdp"
                android:singleLine="true"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt3"
                app:layout_constraintLeft_toRightOf="@+id/firstname"
                android:id="@+id/lastname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/firstname"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt4"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_email"
                android:inputType="text"
                android:textSize="@dimen/_13ssp"
                android:singleLine="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/email"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt5"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:textSize="@dimen/_13ssp"
                android:singleLine="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/password"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/password"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_confirm_password"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_13ssp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt6"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/cnfpassword"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/cnfpassword"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt7"/>

            <com.hbb20.CountryCodePicker
                android:layout_width="0dp"
                android:layout_height="@dimen/_38sdp"
                android:id="@+id/countryCodeHolder"
                android:gravity="left"
                app:ccp_showFlag="false"
                app:ccp_showNameCode="false"
                app:ccp_textSize="@dimen/_13ssp"
                app:ccp_showFullName="false"
                android:paddingTop="@dimen/_5sdp"
                app:ccp_defaultNameCode="US"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt7"/>

            <EditText
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_38sdp"
                android:hint="@string/enter_mobile_number1"
                android:inputType="phone"
                android:layout_marginRight="@dimen/_20sdp"
                android:singleLine="true"
                android:background="@null"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt7"
                app:layout_constraintLeft_toRightOf="@+id/countryCodeHolder"
                android:id="@+id/mobilenumber"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countryCodeHolder"
                android:background="#030F4F"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Name"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/mobilenumber"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt8"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_business_name"
                android:inputType="text"
                android:textSize="@dimen/_13ssp"
                android:singleLine="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt8"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/bussinessname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Address"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/bussinessname"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt9"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_address"
                android:inputType="text"
                android:singleLine="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt9"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/address"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip Code"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/address"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txt10"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_zip_code"
                android:singleLine="true"
                android:inputType="phone"
                android:textSize="@dimen/_13ssp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt10"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/zipcode"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Category"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                app:layout_constraintTop_toBottomOf="@+id/zipcode"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/txtt"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtt"
                android:id="@+id/categoryid"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnsignup"
                android:textAllCaps="false"
                android:textSize="@dimen/_17sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/categoryid"
                android:background="@drawable/rectanglelogin"
                android:textColor="@color/black"
                android:text="@string/sign_up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt11"
                android:layout_marginLeft="@dimen/_70sdp"
                android:text="@string/already_register"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/btnsignup"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:text="@string/sign_in2"
                android:paddingBottom="@dimen/_20sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="#007BFF"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@+id/txt11"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/btnsignup"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>